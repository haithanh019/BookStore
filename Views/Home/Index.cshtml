@model IEnumerable<BookStore.Models.Book>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the store</h1>
</div>
<div class="row">
    <div class="col-md-2">
        @Html.Partial("_SidebarPartial")
    </div>
    <div class="col-md-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-3">
                    <div class="card my-2 store-cart">
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.ImageUrl" class="card-img-top card-img-custom" />
                            <div class="card-body" style="height: 6em">
                                <h4 class="mb-3">
                                    @item.Title
                                </h4>
                            </div>
                            <div class="card-body">
                                <h5 class="card-text">@item.Price.ToString("f")$</h5>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary float-end store-btn"><i class="fa-solid fa-cart-plus"></i></a>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


