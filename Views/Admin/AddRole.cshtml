@model BookStore.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h1>Add Role</h1>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div class="col-md-3">
            <input asp-for="RoleName" class="form-control" placeholder="Name"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-4 row" style="margin-top:20px">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary my-3"><i class="fa-solid fa-plus"></i> Add role</button>
        </div>
        <div class="col-md-6">
            <a asp-action="ListALlRole" class="btn btn-warning my-3 float-end"><i class="fa-solid fa-left-long"></i> Back</a>
        </div>
    </div>
</form>