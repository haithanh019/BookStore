@model BookStore.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="row">
    <div class="mt-3 col-4">
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Id" class="col-form-label col-2"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control col-9 p-2" style="font-size: 0.9em" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="RoleName" class="col-form-label col-2"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="RoleName" class="form-control col-9 p-2">
            </div>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <a asp-action="ListAllRole" class="btn btn-warning float-end"><i class="fa-solid fa-left-long"></i> Back</a>
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-upload"></i> Update</button>
        </div>
    </div>

    <div class="col-5" style="margin-left:100px">
        <h3>User with @Model.RoleName role</h3>
        <table class="table table-striped col-8">
              <tr></tr>
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <tr>
                        <td class="form-label">@user</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="form-label">No users with @Model.RoleName role</td>
                </tr>
            }
        </table>
        <div>
            <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove user in role</a>
        </div>
    </div>
</form>