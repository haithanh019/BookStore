@model BookStore.Models.Order;

<h1>Your Oder</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            var itemTotal = item.Book.Price * item.Quantity;
            <tr>
                <td>
                    <img src="@item.Book.ImageUrl" style="height: 4em" />
                </td>
                <td>
                    @item.Book.Title
                </td>
                <td>
                    @itemTotal.ToString("f")
                </td>
                <td>
                     @item.Quantity
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td><a class="btn btn-primary" asp-action="Index" asp-controller="Store"><i class="fa-solid fa-angles-left"></i> Back to the store</a></td>
            <td class="text-end">
                <strong>Total: </strong>
            </td>
            <td>
                <strong>@Model?.OrderTotal.ToString("f")$</strong>
            </td>
            <td></td>
        </tr>
    </tfoot>
</table>

